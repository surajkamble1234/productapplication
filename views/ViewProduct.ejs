<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(to right, #f3eadf, #f3ede4);
        }
        .main-table {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            margin-top: 50px;
        }
        .form-group {
            margin-bottom: 20px;
        }
      
    </style>
</head>
<body>
    <%- include("nav.ejs") %>

    <div class="container w-75">
        <div class="main-table">
            <div class="form-group">
                <input type="text" name="search" id="search" class="form-control" value=""
                onkeyup="ajaxsearch(this.value)" placeholder="Search Product">
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>SR.NO</th>
                        <th>Product Name</th>
                        <th>Category Name</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody id="tblbody">
                    <% if(viewpro.length > 0) {
                        viewpro.forEach((item, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= item.pname %></td>
                                <td><%= item.name %></td>
                                <td><a href="/updateprod?pid=<%= item.pid %>">Update</a></td>
                                <td><a href="/deleteprod?pid=<%= item.pid %>">Delete</a></td>
                            </tr>
                    <% }) 
                    } else { %>
                        <tr>
                            <td colspan="5">Record not found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="productajax.js"></script>
</body>
</html>
