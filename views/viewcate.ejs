<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>View Category</title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"/>

  <style>
    body {
    background: linear-gradient(to right, #f3eadf,  #f3ede4);

    }
    .main-table {
      background: #ffffff;
      border-radius: 12px;
      padding: 30px;
      margin-top: 50px;
    }
    .form-control {
      border-radius: 8px;
      margin-bottom: 20px;
    }
    table {
      background: #fff;
      border-radius: 10px;
      overflow: hidden;
    }
   
    
  </style>
</head>
<body>
  <%-include("nav.ejs")%>

  <div class="container main-table w-75">
    <div class="form-group">
      <input type="text" name="search" value="" class="form-control" placeholder="Search Category..." onkeyup="ajaxsearch(this.value)">
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>SR.NO</th>
          <th>Category Name</th>
          <th>update</th>
          <th>delete</th>
        </tr>
      </thead>
      <tbody id="tblbody">
        <% if(viewcate.length>0){ 
            viewcate.forEach((item,index)=>{ %>
              <tr>
                <td><%=(index+1)%></td>
                <td><%=item.name%></td>
                <td><a href="/updatecate?id=<%=item.cid%>">update</a></td>
                <td><a href="/deletecate?id=<%=item.cid%>">delete</a></td>
              </tr>
        <% })}else{ %>
              <tr>
                <td colspan="4" class="no-record">record not found</td>
              </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <script src="ajax.js"></script>
</body>
</html>
